<Window x:Class="HomeWork_13.SetConnectionStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_13"
        mc:Ignorable="d"
        Title="SetConnectionStringWindow" Height="120" Width="320" Background="LightGray" WindowStyle="None">
    <Grid>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="20,82,0,0" VerticalAlignment="Top" Width="120" Background="White" Click="Button_Click" />
        <Button Content="Close" HorizontalAlignment="Left" Margin="179,82,0,0" VerticalAlignment="Top" Width="120" Background="White" Click="Button_Click_1"/>
        <TextBox x:Name="InitCatalog_tb" HorizontalAlignment="Left" Height="23" Margin="92,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="DataSource_tb" HorizontalAlignment="Left" Height="23" Margin="92,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
        <Label Content="Data Source:" HorizontalAlignment="Left" Margin="18,13,0,0" VerticalAlignment="Top"/>
        <Label Content="Initial Catalog:" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
