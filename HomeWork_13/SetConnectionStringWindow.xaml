<Window x:Class="HomeWork_13.SetConnectionStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_13"
        mc:Ignorable="d"
        Title="SetConnectionStringWindow"  Background="LightGray" MinHeight="200" MinWidth="240" MaxHeight="200" MaxWidth="240">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="152" VerticalAlignment="Top" Width="207" Margin="10,10,0,0">
            <Label Content="Data Source:" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <TextBox x:Name="DataSource_tb"  HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
            <Label Content="Initial Catalog:" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <TextBox x:Name="InitCatalog_tb" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
            <Button Content="Connect" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,10,0,0" Background="White" Click="Button_Click" />
            <Button Content="Close" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="White" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
